<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Kripto Register</title>

    <link rel="icon" href="/src/public/images/logo-color.png">

    <link rel='stylesheet' href="/src/public/css/index.css" type="text/css">

    <meta property="og:image" content="/src/public/images/preview/preview-register.png"/>
    <meta property="og:title" content="Kripto Register"/>
    <meta property="og:description" content="Trading Future"/>
    <meta property="og:url" content="https://aback-river-moth.glitch.me/register"/>
</head>

<style>
    body {
        background-image: url('/src/public/images/background.jpg');
        background-size: cover;
    }

    .col-1-3 {
        margin: 1rem auto;
    }

    .col-3-3 {
        margin: 0 auto 2rem;
    }

    @media screen and (max-width: 60em) {
        body {
            background-image: url('/src/public/images/background2.jpg');
        }
    }
</style>

<body>

<div id="fb-root"></div>

<div id="loading">
    <img id="loading-image" src="/src/public/images/loading.gif" alt="Loading..."/>
</div>

<%- include ('partials/navbar') %>

<!-- Main Content -->
<div class="col-1-3">
    <form class="frame form fadeInUp" action="/register" method="post">
        <div class="col-3-3">
            <div class="logo">
                <img src="/src/public/images/logo-color.png" alt="logo-image">
                <h1>Register</h1>
            </div>
        </div>
        <div class="col-3-3">
            <input type="text" placeholder="Email / phone" name="email">
        </div>
        <div class="col-3-3">
            <input type="password" placeholder="Password" name="password">
        </div>
        <% if (error !== " "){ %>
            <div class="col-3-3" style="height: 1rem">
                <label class="red-text"><%= error %></label>
            </div>
        <% } %>
        <div class="col-3-3">
            <button type="submit" id="register" class="button-purple">Register</button>
        </div>
        <div class="col-3-3">
            <div class="fb-login-button" data-width="" data-size="medium" data-button-type="continue_with"
                 data-layout="default" data-auto-logout-link="false" data-use-continue-as="true"></div>
        </div>
        <div class="col-3-3">
            <p class="float-left"><a href="/login">Login</a></p>
            <p class="float-right"><a href="/repass">Recover Password</a></p>
        </div>
    </form>

    <%- include ('partials/footer') %>
</div>

<script src="/bootstrap/js/bootstrap.bundle.js"></script>
<script src="/bootstrap/js/bootstrap.js"></script>

<script src="/src/resources/jquery.js"></script>
<script src="/src/resources/popper.min.js"></script>

<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script async defer crossorigin="anonymous"
        src="https://connect.facebook.net/en_US/sdk.js#xfbml=1&version=v14.0&appId=966413697364774&autoLogAppEvents=1"
        nonce="e3FHeFDB">
</script>

<script src="/src/public/js/loading.js"></script>

</body>

</html>
